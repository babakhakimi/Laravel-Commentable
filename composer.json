{
	"name": "babakhakimi/laravel-commentable",
	"description": "Implementing a Comment system for Laravel's Eloquent models.",
	"license": "MIT",
	"keywords": ["Laravel", "Eloquent", "Laravel-Commentable", "Laravel Commentable"],
	"authors": [
		{
		    "name": "Babak Hakimi",
		    "email": "babakhakimimehr@gmail.com"
		}
	],

	"require": {
		"php": "^7.2",
		"illuminate/support": "^7.0|^8.0",
		"illuminate/database": "^7.0|^8.0",
		"kalnoy/nestedset": "^5.0"
	},

	"autoload": {
		"psr-4": {
			"BabakHakimi\\LaravelCommentable\\": "src/"
		}
	},

	"config": {
		"preferred-install": "dist",
		"sort-packages": true
	},
	"extra": {
		"branch-alias": {
			"dev-master": "1.1-dev"
		},
		"laravel": {
			"providers": [
				"BabakHakimi\\LaravelCommentable\\CommentableServiceProvider"
			]
		}
	},
	"minimum-stability": "dev",
	"prefer-stable": true
}
